{% extends "base.html" %}
{% block content %}
<h2>Contact Me</h2>
{% if message %}
<p>{{ message }}</p>
{% else %}
<form method="POST">
    Name: <input type="text" name="name" required><br>
    Message: <textarea name="message" required></textarea><br>
    <button type="submit">Send</button>
</form>
{% endif %}
{% endblock %}

